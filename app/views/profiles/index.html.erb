<div class="col-md-6">
  <h2 style="color:#5bc0de">Profiles</h2>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Twitter account</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @profiles.each do |profile| %>
        <tr>
          <td><%= profile.name %></td>
          <td><%= profile.description %></td>
          <td><%= profile.twitter_account %></td>
          <td><%= link_to 'Show', profile, class: 'btn btn-outline-info btn-sm' %></td>
          <td><%= link_to 'Edit', edit_profile_path(profile), class: 'btn btn-outline-info btn-sm' %></td>
          <td><%= link_to 'Destroy', profile, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-outline-info btn-sm' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Profile', new_profile_path, class: 'btn btn-outline-info btn-sm' %>
</div>

